<%= form_with(model: @room) do |form| %>
    <% if @room.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@room.errors.count, "error") %> </h2>
  
        <ul>
          <% @room.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
    <%= form.hidden_field :hotel_id, :value => params[:hotel_id] %>
    </div>

    <div>
    <%= form.label :room_no, style: "display: block" %>
    <%= form.text_field :room_no%>
    </div>
  
    <div>
      <%= form.label :room_price, style: "display: block" %>
      <%= form.text_field :room_price%>
    </div>
    
    <div>
      <%= form.submit %>
    </div>
<% end %>