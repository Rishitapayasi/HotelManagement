<%= form_with(model: hotels) do |form| %>
    <% if hotels.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(hotels.errors.count, "error") %> prohibited this hotel from being saved:</h2>
  
        <ul>
          <% hotels.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div>
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name %>
    </div>
  
    <div>
      <%= form.label :location, style: "display: block" %>
      <%= form.text_field :location %>
    </div>
  
    <div>
      <%= form.select :status, ['open','close' ] %>
    </div>
    
    <div>
      <%=form.label :images%>
      <%=form.file_field :images, multiple: true, direct_upload: 'false'%>
    </div>
   
    <div>
      <%= form.submit %>
    </div>
  
  <% end %>