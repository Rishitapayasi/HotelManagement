<%= form_with(model: @booking) do |form| %>
    <% if @booking.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@booking.errors.count, "error") %> </h2>
  
        <ul>
          <% @booking.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
    <%= form.hidden_field :hotel_id, :value => params[:hotel_id] %>
    <%= form.hidden_field :room_id, :value => params[:room_id] %>
    </div>

    <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name%>
    </div>
  
    <div>
      <%= form.label :check_in_date, style: "display: block" %>
      <%= form.date_field :check_in_date%>
    </div>
    
    <div>
      <%= form.label :check_out_date, style: "display: block" %>
      <%= form.date_field:check_out_date%>
    </div>

    <div>
      <%= form.submit %>
    </div>
  <% end %>